        "@types/bcrypt": "^5.0.0",
        "@types/ioredis": "^4.28.8",
        "@types/node": "^17.0.21",
        "@types/react-grid-layout": "^1.3.2",
        "@types/react-virtualized-auto-sizer": "^1.0.1",
        "@types/react-window": "^1.8.5",
        "bcrypt": "^5.0.1",
        "cross-env": "^7.0.3",
        "framer-motion": "^6.2.8",
        "front-matter": "^4.0.2",
        "fs.promises.exists": "^1.1.3",
        "ioredis": "^4.28.5",
        "mdx-bundler": "^8.0.1",
        "prisma": "3.10.0",
        "react": "^17.0.2",
        "react-chartjs-2": "^4.0.1",
        "react-dom": "^17.0.2",
        "react-grid-layout": "^1.3.4",
        "react-resizable": "^3.0.4",
        "react-transition-group": "^4.4.2",
        "react-virtualized-auto-sizer": "^1.0.6",
        "react-window": "^1.8.6",
        "recharts": "^2.1.9",
        "rehype-autolink-headings": "^6.1.1",
        "rehype-highlight": "^5.0.2",
        "rehype-slug": "^5.0.1",
        "remark-gfm": "^3.0.1",
        "remix": "^1.3.3",
        "remix-auth": "^3.2.1",
        "remix-auth-form": "^1.1.1",
        "remix-image": "^0.3.14",
        "remix-redis-session": "^0.0.9",
