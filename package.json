        "@types/react-dom": "^17.0.9",
        "@types/react-transition-group": "^4.4.4",
        "@types/sharp": "^0.29.5",
        "concurrently": "^7.0.0",
        "eslint": "^8.10.0",
        "eslint-config-galex": "^3.6.5",
        "prettier": "2.5.1",
        "prisma": "^3.10.0",
        "tailwindcss": "^3.0.23",
        "typescript": "^4.5.5"
    },
    "engines": {
        "node": ">=14"
